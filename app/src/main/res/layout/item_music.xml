<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:weightSum="3"
    android:layout_margin="@dimen/_10sdp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/music_picture"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/image_holder_music_bakground"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/music_src_holder" />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/_29sdp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/max_time"
        android:layout_toEndOf="@+id/music_picture"
        android:gravity="center|start"
        android:lines="1"
        android:ellipsize="end"
        android:paddingStart="@dimen/_10sdp"
        android:text="Tamaly Maak Amr Diab .MP3"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/max_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/_10sdp"
        android:text="30 s"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />


</RelativeLayout>